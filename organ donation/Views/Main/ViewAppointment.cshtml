@model List<organ_donation.Models.ViewAppointmentModel>
@{
    ViewBag.Title = "ViewAppointment";
}
<style>
    #customers {
        font-family: "Times New Roman", Arial, Helvetica, sans-serif;
        border-collapse: collapse;
        font-size:medium;
        width: 100%;
        
    }

        #customers td, #customers th {
            border: 1px solid #ddd;
            padding: 8px;
        }

        #customers tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        #customers tr:hover {
            background-color: #ddd;
        }

        #customers th {
            padding-top: 12px;
            padding-bottom: 12px;
            text-align: left;
            background-color: #4CAF50;
            color: white;
        }
</style>

<h2 style="font-family:'Times New Roman'">View Appointment</h2>
<table id="customers">
    <tr>
        <th>
            Case ID:
        </th>
        <th>
            Slot:
        </th>
        <th>
            Booking Date:
        </th>
        <th>
            Status:
        </th>
        <th>
            Links:
        </th>

    </tr>

    @foreach (var i in Model)
    {
        <tr>
            <td>
                @i.CaseId
            </td>
            <td>
                @i.Slot
            </td>
            <td>
                @i.Bookingdate
            </td>
            <td>
                @i.Status
            </td>
            <td>
                @if (i.Status == "Initiated")
                {
                    <a href="~/Main/VerifyAppointment?cid=@i.CaseId">Click Here</a>
                }
            </td>
        </tr>
    }

</table>
<br />
